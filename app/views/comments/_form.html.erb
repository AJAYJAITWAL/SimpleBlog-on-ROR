
<h3 style="color:blue;"><b>Add Comment</b></h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
<%= f.label :username %><br>
<%= f.text_field(:username, {:class => 'form-control'}) %>
</p>
<p>
<%= f.label :body %><br>
<%= f.text_area(:body, {:class => 'form-control'}) %>
</p>
<br>
<p>
<%= f.submit({:class => 'btn btn-primary'}) %>
</p><br>
<% end %>